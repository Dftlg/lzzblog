@model lzz博客.Areas.Admin.Models.Administrator

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理员登陆</title>
   
</head>
<body>

    <div id="wrapper">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="easyui-panel" title="请登录" style="width: 280px; height: 180px">
                <dl>
                    <dd>
                        <div>
                            <label>用户名</label>
                        </div>
                        <div>
                            <input id="adminName" name="AdminName" type="text" placeholder="请输入用户名" required maxlength="20" />
                            @*@Html.EditorFor(model=>model.AdminName)
                            @Html.ValidationMessageFor(model=>model.AdminName)
                            @Html.DisplayDescriptionFor(model=>model.AdminName)*@
                        </div>
                    </dd>
                    <dd>
                        <div>
                            <label>密码</label>
                        </div>
                        <div>
                            @*@Html.PasswordFor(model => model.PassWord)*@
                            <input id="passWord" name="passWord" type="password" placeholder="请输入密码" required maxlength="20" />
                        </div>
                    </dd>
                    <dd>
                        <div id="admin_login_msg" style="color:red;font-weight:bold"></div>
                        <div>
                            @*@Html.RouteLink("登录", "Admin_default", new {controller="Administrator",action="Login" }, htmlAttributes: new { id = "registerLink"  })*@
                            <input type="submit" value="登录">
                            <button type="button" style="margin-left:40px" onclick="window.location.href='@Url.Action("Index", "Home", new { area = "" })'">
                                离开
                            </button>
                        </div>
                    </dd>
                </dl>
            </div>
        }
    </div>
    @*<div id="wrapper">
        @using (Html.BeginForm())
        {
            <input type="text" name="username">
            <input type="text" name="password">
            <input type="submit" value="tiuj">

        }
    </div>*@
    <script type="text/javascript">
        var lbox = $("#wrapper");
        var x = ($(window).width() - 280) / 2;
        var y = ($(window).height() - 180) / 2;
        lbox.css("padding-top", y).css("padding-left", x);
       
    </script>
</body>
</html>

