@model PagerData<lzz博客.Models.Article>
    @{int a = 0; }
       
    @foreach (var item in Model)
    {
            
            <div class="Clt">@Html.ActionLink(@item.CommonModel.Title,"PartialDetail",new { Controller="Article",id= @item.ArticleId })</div>
            @*<div ><a class="Clt" id="@item.ArticleId">@item.CommonModel.Title</a></div>*@ 
            <br/>
            <div class="Type"><div class="flleft">@item.CommonModel.ReleaseDate</div></div>
            <div class="Len" id="num_@a">@Html.Raw(item.Content)</div>
            <br/>
        a++;
        <hr/>
    }
@*</table>*@
