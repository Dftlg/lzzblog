                    <div id="DirectorID"></div>
                    <div id="hamburgermenu" style="overflow:hidden;width:0px;">
                        <div class="leftmenu">
                            
                        </div>
                    </div>
                    <div class="overlay" style="left:0px;"></div>
                </div>
            </header>
            <div id="content1" class="container body-content">                         
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Lzz_Blog</p>
                </footer>
            </div>

        </div>
    </div>
    </body>     
    
    @RenderSection("scripts", required: false)
   
</html>

