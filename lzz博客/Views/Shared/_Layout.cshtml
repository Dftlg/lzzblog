                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    
                </button>
                @Html.ActionLink("Lzz博客", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>          
        </div>
    </div>
    <div id="lzz" class="" >
        <div id="pgcontainer" style="margin-right:0px;margin-left:0px;">

            <header>
               
                <div id="navbar">
